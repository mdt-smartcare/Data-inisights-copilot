# ============================================
# Backend Service Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0

# ============================================
# Database Configuration
# ============================================
DB_USER=admin
DB_PASSWORD=your-secure-password
DB_NAME=Spice_BD
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================
# Embedding Model Configuration
# ============================================
EMBEDDING_MODEL_PATH=./models/bge-m3
EMBEDDING_MODEL_NAME=BAAI/bge-m3
VECTOR_DB_PATH=./data/indexes/chroma_db_advanced

# ============================================
# Security Configuration
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-for-jwt-signing-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=720
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# API Configuration
# ============================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=Data Insights Copilot
VERSION=1.0.0
DEBUG=false

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ============================================
# Langfuse Tracing (Optional)
# ============================================
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com
ENABLE_LANGFUSE=false

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/backend.log

# ============================================
# RAG Configuration
# ============================================
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_RERANK=true
RAG_CONFIG_PATH=./config/embedding_config.yaml

# ============================================
# Rate Limiting (Optional)
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Testing Configuration
# ============================================
TEST_DATABASE_URL=postgresql://admin:admin@localhost:5432/test_db
PYTEST_TIMEOUT=30
